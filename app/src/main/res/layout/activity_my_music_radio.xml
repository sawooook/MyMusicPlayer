<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackcolor"
    tools:context="com.example.radio.MyMusic_Activity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="83dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/sub_player2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/sub_player2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginBottom="64dp"
        android:background="@color/blackcolor"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/radio_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center|start"
            android:text="Radio station"
            android:textColor="@color/whirecolor"
            android:textSize="25sp" />

        <!--<ImageButton-->
            <!--android:id="@+id/playTrigger_button"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:background="@null"-->
            <!--android:src="@drawable/playbtn" />-->

    </LinearLayout>

    <!--<include layout="@layout/content_main" />-->

</android.support.constraint.ConstraintLayout>